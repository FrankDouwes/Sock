package sock {		import flash.display.Sprite;	import flash.events.Event;    import flash.net.URLLoader; 	import flash.net.URLRequest;		/** @private */	public class DataLoader {			private var _xmlLoader:URLLoader = new URLLoader();		private var _callback:Function;				public function DataLoader() {			_xmlLoader.addEventListener(Event.COMPLETE, showXML);		}				public function loadXML(url:String , callback:Function):void{			_callback 	= callback;			_xmlLoader.load(new URLRequest(url));		}				private function showXML(e:Event):void {			XML.ignoreWhitespace = true; 			var xmldata:XML = new XML(e.target.data);			_callback(xmldata);		}	}}